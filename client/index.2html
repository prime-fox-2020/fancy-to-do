<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" type="text/css" href="style.css"> -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <title>fancy todo app</title>
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a class="brand-logo" href="">FancyTodo</a>
            <ul id="nav-mobile" class="right">
                <li><a style="text-decoration: none;" href="/todos">Todos</a></li>
                <li><a style="text-decoration: none;" href="/user/register">Registrasi</a></li>
                <li><a style="text-decoration: none;" href="/user/login">Login</a></li>
                <li id="logout-button"><a style="text-decoration: none;" href="">Log-out</a></li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <h1>FANCY TODO APP</h1>
    </div>
    <!-- Halaman Registrasi -->
    <div class="container" id="register-page">
        
        <!-- Register form -->
        <form id="form-register" action="" method="">
            <h3>Registrasi</h3>
            <p id="register-error" style="color: red;"></p>
            <label>Email:</label><br>
            <input type="text" name="email" id="email-register"><br><br>
    
            <label>Password:</label><br>
            <input type="text" name="password" id="password-register"><br><br>
    
            <button type="submit" value="register">Daftar</button>
            <button><a href="">Cancel</a></button>
        </form>
    </div>
    
    <!-- Halaman Login -->
    <div class="container" id="login-page">
        <!-- Login form -->
        <form id="form-login" action="" method="">
            <h3>Login</h3>
            <p id="login-error" style="color: red;"></p>
            <label>Email:</label><br>
            <input type="text" name="email" id="email-login"><br><br>
    
            <label>Password:</label><br>
            <input type="text" name="password" id="password-login"><br><br>
    
            <button type="submit" value="login">Login</button>
            <button><a href="">Cancel</a></button>
        </form>
    </div>

    <!-- Halaman Todo List sesuai dengan yang sedang login -->
    <div class="container" id="dashboard">
        <h4 id="welcome">TODO LIST</h4>
        <button id="add-todos-button" class="waves-effect waves-light btn"><a href="" style="color: white;">Add new todo</a></button>
        <table class="centered">
            <thead>
                <tr>
                    <th>TODO</th>
                    <th>DESCRIPTION</th>
                    <th>STATUS</th>
                    <th>DUE DATE</th>
                    <th colspan="2">ACTIONS</th>
                </tr>
            </thead>
            <tbody id="todo-list">
            </tbody>

        </table>

        <button class="btn waves-effect waves-light" id="holidays-button"><a style="color: white;" href="">Indonesia holidays Calendar</a></button>
    </div>
    <!-- Halaman Add new Todos -->
    <div class="container" id="add-page">
        <!-- Login form -->
        <form id="form-add" action="" method="">
            <h3>Add New Todo</h3>
            <p id="add-error" style="color: red;"></p>
            <label>Title:</label><br>
            <input type="text" name="title" id="title-add"><br><br>
            
            <label>Description:</label><br>
            <input type="text" name="description" id="description-add"><br><br>
    
            <label>Status:</label><br>
            <input type="text" name="status" id="status-add"><br><br>

            <label>Due Date:</label><br>
            <input type="text" name="due_date" id="due-date-add"><br><br>
    
            <button class="btn waves-effect waves-light" type="submit" value="login">Add</button>
            <button class="btn waves-effect waves-light"><a href="" style="color: white;">Cancel</a></button>
        </form>
    </div>

    <!-- Halaman Edit Todos -->
    <div class="container" id="edit-page">
        <!-- Login form -->
        <form id="form-edit" action="" method="">
            <h3>Edit Todo</h3>
            <p id="edit-error" style="color: red;"></p>
            <label>Title:</label><br>
            <input type="text" name="title" id="title-edit"><br><br>
            
            <label>Description:</label><br>
            <input type="text" name="description" id="description-edit"><br><br>
    
            <label>Status:</label><br>
            <input type="text" name="status" id="status-edit"><br><br>

            <label>Due Date:</label><br>
            <input type="text" name="due_date" id="due-date-edit"><br><br>
    
            <button onclick="return confirm('Apakah anda yakin ingin meng-edit data ini?');" class="btn waves-effect waves-light" type="submit" value="edit">Edit</button>
            <button class="btn waves-effect waves-light"><a style="color: white;" href="">Cancel</a></button>
        </form>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.0.js" integrity="sha256-r/AaFHrszJtwpe+tHyNi/XCfMxYpbsRg2Uqn0x3s2zc=" crossorigin="anonymous"></script>
    <script src="index.js"></script>
</body>
</html>
